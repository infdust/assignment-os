{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "process",
			"label": "Compile",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"${workspaceFolder}/main.c",
				"${workspaceFolder}/impl.c",
				"-o",
				"${workspaceFolder}/main"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		}
	]
}